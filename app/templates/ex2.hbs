{{page-title "Ex2"}}
{{outlet}}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link href="app-vierge/styles/app.css" rel="stylesheet">

<form class="img-rounded">

  <h1>TD2 Client Riche</h1>

  <div class="alert alert-info">
    <span>Choisissez les objets à acheter :</span>
    <p>{{plural @model.countActive 'Aucun objet choisi' 'Vous avez choisi 1 objet' 'objets'}}</p>
  </div>

  <ul>
      {{#each @model.products as |produit|}}
        <li class="{{if produit.active "active"}}" {{action "toggleActive" produit}}>
          {{produit.name}} <span>{{produit.price}}€</span>
        </li>
      {{/each}}
  </ul>

  <div class="total">
    <p>Total : {{format-currency @model.sumActive '€'}}</p>
  </div>

  <div>
    <div class="input-group">
      <span class="input-group-addon">
        <input type="checkbox">
      </span>
      <input type="text" class="form-control" aria-label="..." ng-model="sCtrl.codePromo" placeholder="Code promo" ng-keyup="sCtrl.applyCode()">
    <!-- <p>Promo(%) : {{format-percent 0.2}}</p> -->
    </div>
  </div>

</form>

